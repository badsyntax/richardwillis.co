{
  "name": "richardwillis.co",
  "private": true,
  "repository": "https://github.com/badsyntax/richardwillis.co",
  "version": "1.0.0",
  "description": "Richard Willis personal site",
  "main": "index.js",
  "author": "Richard Willis",
  "license": "MIT",
  "scripts": {
    "postinstall": "bundle install --path vendor/bundle",
    "prestart": "npm install && (forever stop production || true)",
    "prestart-dev": "npm install && (forever stop dev || true)",
    "prestart-staging": "npm install && (forever stop staging || true)",
    "prebuild": "npm install",
    "start": "NODE_ENV=production forever --append --uid \"production\" start server/index.js",
    "start-staging": "NODE_ENV=staging forever --append --uid \"staging\" start server/index.js",
    "start-dev": "NODE_ENV=development forever --append --uid \"dev\" start server/index.js",
    "pdf": "phantomjs server/tools/generate-pdf.js http://richardwillis.co/cv/pdf",
    "pdf-staging": "phantomjs server/tools/generate-pdf.js http://staging.richardwillis.co/cv/pdf",
    "pdf-dev": "phantomjs server/tools/generate-pdf.js http://dev.richardwillis.co.local/cv/pdf",
    "prewatch": "npm install",
    "watch": "bundle exec compass watch --poll -c config/compass.rb",
    "compile": "bundle exec compass compile -c config/compass.rb",
    "build": "npm run compile && npm run pdf",
    "build-staging": "npm run compile && npm run pdf-staging",
    "build-dev": "npm run compile && npm run pdf-dev"
  },
  "devDependencies": {
  },
  "dependencies": {
    "ejs": "^1.0.0",
    "express": "^4.10.0",
    "express-helpers": "^1.3.1",
    "forever": "^0.11.1",
    "lodash": "^2.4.1",
    "moment": "^2.8.3",
    "nconf": "^0.6.9",
    "phantomjs": "^1.9.12"
  }
}
